<div class="login-form">
  <div class="container">
    <h1>ログイン</h1>

    <%=form_tag"/login" do%>
    <span class="lefts">メールアドレス</span><input class="check rights" type="text" name="email" value="<%=@email%>">
    <div class="clear">

    </div>
    <span class="lefts">パスワード</span><input class="check rights" type="password" name="password" value="<%=@password%>">
    <div class="clear">

    </div>
    <input class="submit" type="submit" name="" value="ログイン">
    <%end%>
    <a class="cleate-link" href="/user/new">新規登録</a>
  </div>
</div>
