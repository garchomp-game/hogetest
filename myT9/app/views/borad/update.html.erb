<div class="form-wrapper">
  <div class="container">
    <h1>集合所登録</h1>
    <%=form_tag "/borad/#{@id}/update" do%>
    <input type="hidden" name="id" value="<%=@id%>">
    <span class="left">掲示板名</span>：<span class="right"><input type="text" name="name" value="<%=@borad.name%>"></span>
    <span class="left">詳細説明</span>：<span class="right"><input type="text" name="description" value="<%=@borad.description %>"></span>
    <span class="left">アイコン</span>：<span class="right"><input type="file" name="icon" value=""></span>
    <div class="clear">

    </div>
    <input class="submit" type="submit" name="" value="登録">
    <%end%>
  </div>
</div>
